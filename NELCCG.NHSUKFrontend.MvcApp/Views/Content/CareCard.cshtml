@{
    ViewData["Title"] = ViewData["HeroTitle"] = "Care Card";
}

@section Head {
    <style>
        .open-q { background: #eee;}
        .open-q .nhsuk-care-card__content::before {
            color: red;
            font-size: 2.5em;
            content: "┌ ";
            position: absolute;
            margin-top: -1em;
            margin-left: -0.8em;
        }

        .close-q {
            position: relative;
        }

            .close-q .nhsuk-care-card__content::after {
                color: darkorange;
                font-size: 2.5em;
                content: " ┘";
                position: absolute;
                right: 0.1em;
                bottom: -0.1em;
            }
    </style>
}

@section PreContent {
    <nhsuk-breadcrumb>
        <nhsuk-breadcrumb-list>
            <a nhsuk-breadcrumb-item asp-controller="Home" asp-action="Index">Home</a>
            <a nhsuk-breadcrumb-item asp-action="Index">Content</a>
        </nhsuk-breadcrumb-list>
        <a nhsuk-breadcrumb-backlink asp-action="Index">Back to Content</a>
    </nhsuk-breadcrumb>
}

<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-one-quarter">
        <nhsuk-contents-list>
            <nhsuk-contents-list-item text="Care Card" current></nhsuk-contents-list-item>
            <nhsuk-contents-list-item text="Details / Expander" href="@Url.Action("Details")"></nhsuk-contents-list-item>
            <nhsuk-contents-list-item text="Do and Don't Lists" href="@Url.Action("DoDontLists")"></nhsuk-contents-list-item>
            <nhsuk-contents-list-item text="Hero" href="@Url.Action("Hero")"></nhsuk-contents-list-item>
            <nhsuk-contents-list-item text="Image" href="@Url.Action("Image")"></nhsuk-contents-list-item>
            <nhsuk-contents-list-item text="Inset text" href="@Url.Action("InsetText")"></nhsuk-contents-list-item>
            <nhsuk-contents-list-item text="Summary list" href="@Url.Action("SummaryList")"></nhsuk-contents-list-item>
            <nhsuk-contents-list-item text="Tag" href="@Url.Action("Tag")"></nhsuk-contents-list-item>
            <nhsuk-contents-list-item text="Warning callout" href="@Url.Action("WarningCallout")"></nhsuk-contents-list-item>
        </nhsuk-contents-list>
    </div>
    <div class="nhsuk-grid-column-three-quarters">
        <nhsuk-care-card heading="Speak to a GP if:" type="NonUrgent">
            <ul>
                <li>Symptom one</li>
                <li>Symptom two</li>
                <li>Symptom three</li>
                <li>Symptom four</li>
            </ul>
        </nhsuk-care-card>

        <nhsuk-care-card heading="Ask for an urgent GP appointment if:" type="Urgent" classes="@(new[] { "open-q", "close-q" })">
            <ul>
                <li>Symptom one</li>
                <li>Symptom two</li>
                <li>Symptom three</li>
                <li>Symptom four</li>
            </ul>
        </nhsuk-care-card>

        <nhsuk-care-card heading="Call 999 if:" type="Immediate">
            <ul>
                <li>Symptom one</li>
                <li>Symptom two</li>
                <li>Symptom three</li>
                <li>Symptom four</li>
            </ul>
        </nhsuk-care-card>
    </div>
</div>