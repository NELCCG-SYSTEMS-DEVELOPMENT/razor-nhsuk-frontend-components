@using NELCCG.NHSUKFrontend.Razor.Helpers
@using Microsoft.AspNetCore.Mvc.Routing;
@inject SvgIconHelper iconHelper
@inject IUrlHelperFactory urlHelperFactory
@{
    ViewData["Title"] = ViewData["HeroTitle"] = "SVG Icons";
    var urlHelper = urlHelperFactory.GetUrlHelper(this.ViewContext);
}
@section Head {
    <style>
        img.em-dash-icon {
            width: 1em;
            height: 1px;
        }

        img.em-dash-small-icon {
            width: 0.842em;
            height: 1px;
        }
    </style>
}

@section PreContent {
    <nhsuk-breadcrumb>
        <nhsuk-breadcrumb-list>
            <a nhsuk-breadcrumb-item asp-action="Index">Home</a>
        </nhsuk-breadcrumb-list>
        <a nhsuk-breadcrumb-backlink asp-action="Index">Go Home</a>
    </nhsuk-breadcrumb>
}

<h2>Embed with &lt;img src...&gt;</h2>
<table>
