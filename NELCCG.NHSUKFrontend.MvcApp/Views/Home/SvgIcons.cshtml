        <tr>
            <th>Icon</th>
            <th>Label</th>
        </tr>
        <tr>
            <td>
                <img class="nhsuk-icon"
                     src="@urlHelper.Content(iconHelper.GetSvgIconVirtualPath(SvgIcon.ArrowLeft))"
                     alt="Arrow Left" />
            </td>
            <td>Arrow Left</td>
        </tr>
