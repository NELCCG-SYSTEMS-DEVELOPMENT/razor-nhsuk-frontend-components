@{
    ViewData["Title"] = ViewData["HeroTitle"] = "Card";
}

@section Head {
    <style>
        .class-1::before {
            color: red;
            font-size: 0.5em;
            vertical-align: sub;
            content: "class-1 ";
        }

        .class-2::after {
            color: darkorange;
            font-size: 0.5em;
            vertical-align: super;
            content: " class-2";
        }
    </style>
}

@section PreContent {
    <nhsuk-breadcrumb>
        <nhsuk-breadcrumb-list>
            <a nhsuk-breadcrumb-item asp-controller="Home" asp-action="Index">Home</a>
            <a nhsuk-breadcrumb-item asp-action="Index">Navigation</a>
        </nhsuk-breadcrumb-list>
        <a nhsuk-breadcrumb-backlink asp-action="Index">Back to Navigation</a>
    </nhsuk-breadcrumb>
}

<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-one-quarter">
        <nhsuk-contents-list>
            <nhsuk-contents-list-item text="Card" current></nhsuk-contents-list-item>
            <nhsuk-contents-list-item text="Contents List"  href="@Url.Action("ContentsList")"></nhsuk-contents-list-item>
        </nhsuk-contents-list>
    </div>
    <div class="nhsuk-grid-column-three-quarters">
        <nhsuk-card heading="Encoded description and <em>heading</em>"
                    encode-heading
                    description="This is <script>alert('hi')</script> unsafe content"
                    encode-description></nhsuk-card>

        <nhsuk-card heading="Unencoded description <em>and</em> heading" heading-classes="@(new[] { "class-1", "class-2" })"
                    description="This is <strong>safe</strong> content. Custom heading classes are applied."></nhsuk-card>

        <nhsuk-card heading="Card with image" image-url="https://placekitten.com/g/970/450"
                    description="This card has an image. Source: <a href='https://placekitten.com/'>placekitten.com</a>"></nhsuk-card>

        <nhsuk-card heading="Clickable card" clickable href="#maincontent"
                    description="This card is clickable"></nhsuk-card>

        <nhsuk-card heading="Feature card" feature
                    description="This is a feature card"></nhsuk-card>

    </div>
</div>